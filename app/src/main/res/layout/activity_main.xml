<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ChallengeActivity">

  <RadioGroup
    android:id="@+id/dataTypeSelectionGroup"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.appcompat.widget.AppCompatRadioButton
      android:id="@+id/initialJsonSelection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Initial JSON"/>

    <androidx.appcompat.widget.AppCompatRadioButton
      android:id="@+id/editedJsonSelection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Edited JSON"/>

    <androidx.appcompat.widget.AppCompatRadioButton
      android:id="@+id/deletedJsonSelection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Deleted JSON"/>

  </RadioGroup>

  <Button
    android:id="@+id/buttonImport"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:text="Import Data"
    app:layout_constraintTop_toBottomOf="@+id/dataTypeSelectionGroup"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <Button
    android:id="@+id/buttonClear"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:text="Clear Data"
    app:layout_constraintTop_toBottomOf="@+id/buttonImport"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <Button
    android:id="@+id/buttonSessionDump"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:text="Dump Session Data"
    app:layout_constraintTop_toBottomOf="@+id/buttonClear"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <Button
    android:id="@+id/buttonPersonDump"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:text="Dump Person Data"
    app:layout_constraintTop_toBottomOf="@+id/buttonSessionDump"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/buttonPersonDump"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
      android:id="@+id/textResults"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginEnd="30dp"/>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>